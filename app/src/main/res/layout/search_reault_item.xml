<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
              android:padding="@dimen/text_small"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <ImageView
            android:background="@color/gray_color"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/search_item_photo"
            />
    <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="@dimen/text_small"
            android:paddingRight="@dimen/text_small"
            android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <TextView
                android:textSize="@dimen/text_medium"
                android:textStyle="bold"
                android:id="@+id/search_item_title"
                android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>

        <TextView
                android:textSize="@dimen/text_small"
                android:textStyle="italic"
                android:id="@+id/search_item_kind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:textSize="@dimen/text_small"
                android:id="@+id/search_item_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
