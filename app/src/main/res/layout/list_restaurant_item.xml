<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/restaurant_item_wrapper"
              android:layout_marginRight="10dp"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <ImageView android:id="@+id/restaurant_item_photo"
               android:layout_width="120dp"
               android:src="@color/gray_color"
               android:layout_height="80dp"
               android:contentDescription="Photo"
               android:foreground="@drawable/round_corner_image"
    />


    <TextView android:id="@+id/restaurant_item_name"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/not_updated"
              android:textStyle="bold"
              android:textSize="@dimen/text_medium"
    />
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/restaurant_item_category" android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/not_updated"
                  android:textSize="@dimen/text_small"
        />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/split_character"
                  android:textSize="@dimen/text_small"
        />
        <TextView android:id="@+id/restaurant_item_kcalo" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textSize="@dimen/text_small"
        />
    </LinearLayout>
    <TextView android:id="@+id/restaurant_item_time" android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="@string/not_updated"
              android:textSize="@dimen/text_small"
    />
</LinearLayout>
